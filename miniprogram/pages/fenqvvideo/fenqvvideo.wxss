 /* 视频区的样式 */

 .videocontainer .list {
    display: flex;
  
   justify-content: space-between;
  
   flex-wrap:wrap;
  }
  .videocontainer .list>view {
    /* width: 50%; */
    width: 375rpx;
  
   margin: 0 0 20rpx 0rpx;
  }
  
  .videocontainer .list .video {
  
    width: 90%;
  
   height: 200rpx;
  
    margin: 10rpx auto;
    background-color: #aaa;
    border-radius: 8rpx;
  }
  .videocontainer .list .title {
    margin: 0rpx 10rpx 0rpx 10rpx;
    text-align: center;
    font-size: 16px;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis; 
    word-wrap:break-word; 
    white-space: normal !important; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical;
  }
